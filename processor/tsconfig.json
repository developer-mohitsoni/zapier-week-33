{
  "compilerOptions": {
    "target": "ES2024",
    "module": "nodenext",                   
    "moduleResolution": "nodenext",
    "lib": ["ES2024", "DOM"],
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "incremental": true, 
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}